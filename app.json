{
  "expo": {
    "name": "RandomRecipeBuddy",
    "slug": "RandomRecipeBuddy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/appicon.png",
    "splash": {
      "image": "./assets/splashlogo.png",
      "resizeMode": "contain",
      "backgroundColor": "#9298D6"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "android": {
      "package": "com.chaibear.randomrecipebuddy",
      "googleServicesFile": "./google-services.json"
    },
    "ios": {
      "supportsTablet": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "config": {
        "firebase": {
          "apiKey": "{yourkey}",
          "measurementId": "{yourid}"
        }
      }
    }
  }
}
